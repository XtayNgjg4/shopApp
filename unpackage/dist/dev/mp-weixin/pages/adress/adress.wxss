.adressItem {
  background: #ffffff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eeeeee;
}
.adressCon {
  width: 90%;
}
.adressCon .adressUp {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.adressCon .adressUp .adressUp_default {
  width: 30px;
  height: 14px;
  font-size: 18rpx;
  border: 1px solid #FEB405;
  line-height: 14px;
  text-align: center;
  margin-top: 15rpx;
}
.adressCon .adressTxt {
  font-size: 24rpx;
  color: #777777;
}
.adressUp_name {
  font-size: 34rpx;
  margin-bottom: 15rpx;
}
.adressUp_name text:last-child {
  font-size: 24rpx;
  margin: 0 20rpx;
}
.adressIcon {
  width: 10%;
  margin-left: 30rpx;
  text-align: center;
}
.adressIcon image {
