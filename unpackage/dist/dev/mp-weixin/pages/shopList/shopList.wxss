.goshop {
  width: 60px;
  height: 20px;
  background-color: #FEB405;
  color: #F8F8F8;
  border-radius: 50px;
  font-size: 12px;
  text-align: center;
  line-height: 20px;
  margin: auto;
}
.shopItem_num {
  margin: 0 5px;
}
.shopItem_num, .shopItem-location {
  font-size: 10px;
  color: #000000;
  line-height: 24px;
}
.selectitem {
  width: 20px !important;
  height: 20px !important;
}
.markActive.mark {
  display: block;
  -webkit-animation: showPopup 0.3s linear both;
          animation: showPopup 0.3s linear both;
}
.move.markView {
  -webkit-animation: moveActive 0.3s linear both;
          animation: moveActive 0.3s linear both;
}
.stop.markView {
  -webkit-animation: stopActive 0.3s linear both;
          animation: stopActive 0.3s linear both;
}
.hideActive.mark {
  -webkit-animation: hidePopup 0.3s linear both;
          animation: hidePopup 0.3s linear both;
}
.none.mark {
  display: none;
}
.mark {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  opacity: 0;
  z-index: 999;
}
.markView {
  width: 80%;
  height: 100%;
  background-color: #ffffff;
  -webkit-transform: translateX(-100%);
          transform: translateX(-100%);
  -webkit-transition: 0.6s;
  transition: 0.6s;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  padding: 30px 10px;
}
