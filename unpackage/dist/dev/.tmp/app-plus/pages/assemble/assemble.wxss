.markActive.mark {
  display: block;
  -webkit-animation: showPopup 0.3s linear both;
          animation: showPopup 0.3s linear both;
}
.move.markView {
  -webkit-animation: moveActive 0.3s linear both;
          animation: moveActive 0.3s linear both;
}
.stop.markView {
  -webkit-animation: stopActive 0.3s linear both;
          animation: stopActive 0.3s linear both;
}
.hideActive.mark {
  -webkit-animation: hidePopup 0.3s linear both;
          animation: hidePopup 0.3s linear both;
}
.none.mark {
  display: none;
}
.mark {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  opacity: 0;
  z-index: 999;
}
.markView {
  width: 70%;
  height: 100%;
  background-color: #ffffff;
  -webkit-transform: translateX(-100%);
          transform: translateX(-100%);
  -webkit-transition: 0.6s;
  transition: 0.6s;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
