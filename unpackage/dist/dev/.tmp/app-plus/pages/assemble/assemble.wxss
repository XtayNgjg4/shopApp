.goAssBtn {
  width: 60px;
  height: 20px;
  text-align: center;
  line-height: 20px;
  font-size: 14px;
  color: #FFFFFF;
  background-color: #B81C22;
  margin: auto;
}
.assembleNum {
  width: 40px;
  height: 14px;
  border: 1px solid #FEB405;
